= form_for @cpanel_user do |f|
  - if @cpanel_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cpanel_user.errors.count, "error")} prohibited this cpanel_user from being saved:"
      %ul
        - @cpanel_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :nick
    = f.text_field :nick
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :avatar
    = f.text_field :avatar
  .actions
    = f.submit 'Save'
