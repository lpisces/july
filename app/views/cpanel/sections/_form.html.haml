= form_for @cpanel_section do |f|
  - if @cpanel_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cpanel_section.errors.count, "error")} prohibited this cpanel_section from being saved:"
      %ul
        - @cpanel_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sort
    = f.number_field :sort
  .actions
    = f.submit 'Save'
